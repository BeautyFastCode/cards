{% extends 'base.html.twig' %}

{% block title %}{{ deck.name }} | Cards{% endblock %}

{% block main_navbar %}
    {% include 'dashboard/_navbar.html.twig' %}
{% endblock %}

{% block main %}

    <div class="container">

        <section>
            <h2>Learning summary.</h2>
            <hr class="mb-2">

            <div class="row">
                <div class="col-4">
                    <a href="{{ path('show-deck') }}"
                       class="deck {{ deck.background }} text-white">
                        <p>{{ deck.name }}</p>
                    </a>
                </div>
                <div class="col-8">
                    {% if deck.cards is defined %}
                        <p>Cards: {{ deck.cards|length }}</p>
                    {% endif %}

                    <a href="{{ path('learn') }}" class="btn btn-lg btn-primary">
                        <i class="fa fa-leanpub" aria-hidden="true"></i>
                        Resume learning
                    </a>
                    <a href="{{ path('dashboard') }}" class="btn btn-lg btn-light text-secondary">
                        <i class="fa fa-leanpub" aria-hidden="true"></i>
                        Go to decks.
                    </a>
                </div>
            </div>

        </section>

    </div>

{% endblock %}
