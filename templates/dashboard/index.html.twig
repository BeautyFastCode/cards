{% extends 'base.html.twig' %}

{% block title %}Dashboard | Cards{% endblock %}

{% block main_navbar %}
    {% include 'dashboard/_navbar.html.twig' %}
{% endblock %}

{% block main %}
    <div class="container">

        {% for suite in suites %}
            <section>
                {% include 'dashboard/_suite-navbar.html.twig' with {'suite': suite} %}
                <hr class="mb-2">

                <div class="row">
                    {% if suite.decks is defined %}
                        {% for deck in suite.decks %}
                            <div class="col-3">
                                <a href="#" class="deck {{ deck.background }} text-white">
                                    <p>{{ deck.name }}</p>
                                </a>
                            </div>
                        {% endfor %}
                    {% endif %}

                    <div class="col-3">
                        <a href="#" class="deck bg-light text-secondary">
                            <p><i class="fa fa-plus"></i> Create new Deck</p>
                        </a>
                    </div>

                </div>
            </section>
        {% endfor %}

        <section>
            <hr class="mb-2">
            <a href="#" class="btn btn-light text-secondary">
                <i class="fa fa-plus"></i>
                Create a new Suite.
            </a>
        </section>
    </div>
{% endblock %}

{% block footer %}{% endblock %}
