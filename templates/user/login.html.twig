{% extends 'base.html.twig' %}

{% block title %}Log in to Cards{% endblock %}

{% block main %}
    <div class="container my-5 mx-auto">

        <section>
            <div class="row">
                <div class="col-md-5">
                    <h1><i class="fa fa-sign-in"></i> Log in to Cards.</h1>
                </div>
                <div class="col-md-3">
                    <a href="{{ path('sign-up') }}" class="btn btn-light text-secondary btn-sm">
                        <i class="fa fa-plus"></i>
                        or create an account.
                    </a>
                </div>
            </div>

            <hr class="mb-2">
        </section>

        <section class="w-50">
            <form action="{{ path('dashboard') }}">
                <div class="form-group">
                    <label>Username (or email)</label>
                    <input name="username" type="text" class="form-control" placeholder="eg., John, john.smith@gmail.com">
                </div>
                <div class="form-group">
                    <label >Password</label>
                    <input name="password" type="password" class="form-control" placeholder="e.g., ********">
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    <i class="fa fa-sign-in"></i>
                    Log In</button>
            </form>
        </section>

        <section>
            <hr class="mb-2">
            <a href="{{ path('forgot') }}" class="btn btn-light text-secondary btn-sm">
                <i class="fa fa-life-ring"></i>
                Forgot your password?
            </a>
        </section>

    </div>

{% endblock %}

{% block footer %}
    {% include 'homepage/_footer.html.twig' %}
    {{ parent() }}
{% endblock %}
